<Window x:Class="WallMount1.UI.NewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallMount1.UI"
        mc:Ignorable="d"
        Title="New Model" Height="100" Width="400">
        
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="30,20,0,0">
            <StackPanel>
                <Label Content="Model Name: "/>

            </StackPanel>
            <StackPanel>
                <TextBox Name="tbx_ModelName" Width="150" Height="20" Margin="5,5,5,5"/>
            </StackPanel>
            <StackPanel>
                <Button Name="btn_AddNewModel" Content="Add" Width="60" Height="20" Margin="5,5,5,5" Click="btn_AddNewModel_Click"/>

            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
